{
  "[python]": {
    "editor.defaultFormatter": "ms-python.python"
  },
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.mypyEnabled": true,
  "python.linting.pylintEnabled": false,
  "python.linting.lintOnSave": true,
  "python.formatting.provider": "black",
  "python.linting.pycodestylePath": "${workspaceFolder}/bin/pycodestyle",
  "python.linting.flake8Path": "${workspaceFolder}/.venv/bin/flake8",
  // MEMO: autopep8 の代わりに black を採用することにしたのでコメントアウト
  // "python.formatting.autopep8Path": "${workspaceFolder}/.venv/bin/autopep8",
  "python.sortImports.args": ["-rc", "--atomic"],
  "editor.formatOnSave": true,
  "python.venvPath": "${workspaceFolder}/.venv",
  "python.autoComplete.extraPaths": [
    "${workspaceFolder}/.venv/Lib/site-packages"
  ],
  "python.pythonPath": "${workspaceFolder}/.venv/bin/python",
  "python.analysis.extraPaths": ["${workspaceFolder}/.venv/Lib/site-packages"]
}
